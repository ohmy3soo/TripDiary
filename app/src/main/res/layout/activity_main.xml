<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="match_parent"
        android:layout_height="162dp"
        android:layout_gravity="center"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="45dp"
        android:paddingTop="55dp"
        android:src="@drawable/travel2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="240dp"
            android:layout_height="20dp"
            android:src="@drawable/main" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="410dp"
            android:layout_height="20dp"
            android:src="@drawable/main" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="580dp"
            android:layout_height="20dp"
            android:src="@drawable/main" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/main_start"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:layout_marginLeft="80dp"
            android:padding="0dp"
            android:paddingRight="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/post1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="80dp" />

        <ImageButton
            android:id="@+id/main_archive"
            android:background="#ffffff"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:paddingRight="40dp"
            android:src="@drawable/post2"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_alignTop="@+id/main_start"
            android:layout_toRightOf="@+id/main_start"
            android:layout_toEndOf="@+id/main_start" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/main_help"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:adjustViewBounds="true"
        android:background="#ffffff"
        android:padding="0dp"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/post3" />
</LinearLayout>